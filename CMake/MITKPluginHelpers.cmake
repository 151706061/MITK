  INCLUDE_DIRECTORIES(${MITK_INCLUDE_DIRS} ${QMITK_INCLUDE_DIRS})
  LINK_DIRECTORIES(${MITK_LINK_DIRECTORIES} ${QMITK_LINK_DIRECTORIES})
  
  MACRO_CREATE_QT_PLUGIN()

  TARGET_LINK_LIBRARIES(${PLUGIN_TARGET} ${MITK_LIBRARIES} ${QMITK_LIBRARIES})

ENDMACRO()
