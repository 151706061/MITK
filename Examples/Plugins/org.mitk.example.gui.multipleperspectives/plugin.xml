<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.0"?>
<plugin>
  <extension point="org.blueberry.osgi.applications">
    <application id="org.mitk.example.multipleperspectives">
      <run class="MultiplePerspectives"/>
    </application>
  </extension>
  
  <extension point="org.blueberry.ui.perspectives">
    <perspective
      id="org.mitk.example.minimalperspective"
      name="Minimal Example Perspective"
    icon="resources/testIcon.png"
      class="MinimalPerspective">
    </perspective>
  </extension>
  
  <extension point="org.blueberry.ui.perspectives">
    <perspective
      id="org.mitk.example.extendedperspective"
      name="Extended Example Perspective"
    icon="resources/testIcon2.png"
      class="ExtendedPerspective">
    </perspective>
  </extension>  

<extension point="org.blueberry.ui.views">
    <view 
      id="org.mitk.views.minimalview" 
      name="Minimal Example View" 
      class="MinimalView">
    </view>
  </extension>
  
<extension point="org.blueberry.ui.views">
    <view 
      id="org.mitk.views.selectionview" 
      name="Selection Example View" 
      class="SelectionView">
    </view>
  </extension>
  
</plugin>
